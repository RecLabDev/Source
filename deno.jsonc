{
    "tasks": {
        "build-sdk": "bash scripts/build-sdk.sh",
        "build-sdk-new": "deno run --allow-env --allow-run --allow-read ./scripts/build-sdk.tsx",
        "build-js-runtime": "bash scripts/build-js-runtime.sh debug",
        "open-unity-sandbox": "bash scripts/open-unity-sandbox.sh",
        "run-unity-server": "bash scripts/run-unity-server.sh"
    },
    "unstable": [
        "kv"
    ],
    "fmt": {
        "useTabs": true,
        "lineWidth": 80,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": true,
        "proseWrap": "preserve",
        "include": [
            "src/"
        ],
        "exclude": [
            "src/testdata/",
            "data/fixtures/**/*.ts"
        ]
    }
}